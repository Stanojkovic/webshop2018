@using WebShop2018.Models
@model IEnumerable<WebShop2018.Models.Image>


@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink(" ", "Create", " ", new { @class = "glyphicon glyphicon-plus btn btn-primary btn-md" })
    @Html.Raw("&nbsp;&nbsp; ")
    @Html.ActionLink("Artikli", "Index", "Artikli", " ", new { @class = "glyphicon glyphicon-link btn btn-primary btn-md" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImageName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.ImeSlikeZaPrikaz)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>

        </th>

    </tr>

    @foreach (var image in Model)
    {
        <tr>
            <td>
                @image.ImageName
            </td>

            <td>
                @image.ImeSlikeZaPrikaz
            </td>
           
            <td>
               
                @image.Description
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = image.Id }) |
                @Html.ActionLink("Details", "Details", new { id = image.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = image.Id })
            </td>
        </tr>
    }

</table>

